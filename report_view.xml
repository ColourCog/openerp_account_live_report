<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_live_tree" model="ir.ui.view">
            <field name="name">account.live.line.tree</field>
            <field name="model">account.live.line</field>
            <field name="arch" type="xml">
                <tree string="Live Profit/Loss" create="false">
                    <field name="account_id"/>
                    <field name="period_id"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>

        <record id="view_account_live_filter" model="ir.ui.view"> 
            <field name="name">account.live.line.search</field>
            <field name="model">account.live.line</field>
            <field name="arch" type="xml"> 
            <search string="Search Accounts"> 
              <field name="account_id"/>
              <field name="period_id"/>
              <separator/>
              <group expand="0" string="Group By..." > 
                <filter string="Account" name="groupby_account" domain="[]" context="{'group_by':'account_id'}"/>
              </group> 
            </search> 
          </field> 
        </record> 
    
        
        <record id="action_account_live_tree" model="ir.actions.act_window">
            <field name="context">{'search_default_groupby_account': 1, 'view_mode': True}</field>
            <field name="name">Profit/Loss</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.live.line</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_account_live_tree"/>
            <field name="help" type="html">
                <p>
                    Generate the report.
                </p>
            </field>
        </record>

        <!-- Enable drill-down from Chart Of Accounts tree view -->
        <act_window
            id="action_move_line_live_select"
            name="Journal Items"
            context="{'default_live_id': active_id}"
            res_model="account.move.line"
            src_model="account.live.line"/>

        <act_window
            id="action_account_live_items"
            name="Journal Items"
            context="{'default_live_id': active_id}"
            res_model="account.move.line"
            src_model="account.live.line"
            key2="tree_but_open"/>

